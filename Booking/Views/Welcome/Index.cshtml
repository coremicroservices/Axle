@using Booking.Helper
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Welcome";
}

<!-- Hero Section -->
<div class="container my-5">
    <div class="row align-items-center">
        <!-- Welcome Message -->
        <div class="col-lg-6 mb-4 mb-lg-0">
            <h1 class="fw-bold text-primary display-5">Welcome to TruckBook 🚛</h1>
            <p class="lead text-muted">Your trusted partner for reliable truck bookings and real-time shipment tracking across India.</p>
            <a href="/Home/Index" class="btn btn-primary btn-lg mt-3">Book a Truck</a>
            <p class="mt-4 text-muted small">Trusted by 10,000+ customers across Maharashtra. Experience logistics made simple.</p>
        </div>

        <!-- Login Section -->
        @if (ViewBag.isNotLoggedIn)
        {
            <div class="col-lg-6">
                <div class="card shadow-sm p-4 border-0">
                <h4 class="mb-4 text-center">🔐 Login to Your Account</h4>
                <form asp-action="Login" asp-controller="Customer" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="Username" class="form-label">Username</label>
                        <input type="text" name="Username" class="form-control" placeholder="Enter your username" required />
                    </div>
                    <div class="mb-3">
                        <label for="Password" class="form-label">Password</label>
                        <input type="password" name="Password" class="form-control" placeholder="Enter your password" required />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">Login</button>
                    </div>
                    <p class="text-center mt-3 text-muted small">New user? <a href="/Customer/Register">Register here</a></p>
                </form>
            </div>
            </div>
        }
        else
{

            <div class="col-lg-6">
                <h4 class="mb-3 text-center">👋 Welcome back, @ViewBag.LoggedInUser!</h4>
                <p class="text-muted text-center">You're logged in as <strong>@ViewBag.LoggedInUser</strong>. Ready to manage your shipments?</p>
                <div class="d-grid gap-2 mt-4">
                    <a href="/Customer/Shipments" class="btn btn-outline-primary">📦 View My Shipments</a>
                    <a href="/Account/Profile" class="btn btn-outline-secondary">👤 My Profile</a>
                    <a href="/Account/Logout" class="btn btn-danger">🚪 Logout</a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Feature Highlights -->
<div class="container mt-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center p-3">
                <h5 class="card-title">📦 Easy Booking</h5>
                <p class="card-text">Book trucks in minutes with our streamlined interface. Choose vehicle type, pickup, and drop-off with ease.</p>
                <a href="/Home/Index" class="btn btn-outline-primary btn-sm">Start Booking</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center p-3">
                <h5 class="card-title">📍 Real-Time Tracking</h5>
                <p class="card-text">Track your shipments live with GPS updates and delivery status. Stay informed every step of the way.</p>
                <a href="/Customer/Track" class="btn btn-outline-success btn-sm">Track Shipment</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center p-3">
                <h5 class="card-title">💬 Support & Safety</h5>
                <p class="card-text">Our support team is here 24/7. All drivers are verified and insured for your peace of mind.</p>
                <a href="/Customer/Support" class="btn btn-outline-secondary btn-sm">Contact Support</a>
            </div>
        </div>
    </div>
</div>
