@model SupplierOnboardingDto
@{
    ViewData["Title"] = "Supplier Onboarding";
    Layout = "~/Views/Shared/_SupplierLayout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white text-center">
                    <h3>Become a Verified Supplier</h3>
                    <p class="mb-0">Get bookings, alerts, and grow your fleet with us</p>
                </div>
                <div class="card-body">
                    <form asp-action="SubmitOnboarding" method="post" asp-controller="SupplierOnboard" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <h5 class="mb-3">Business Details</h5>
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.CompanyName)
                            @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.OwnerName)
                            @Html.TextBoxFor(m => m.OwnerName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.OwnerName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.ContactNumber)
                            @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control", type = "tel" })
                            @Html.ValidationMessageFor(m => m.ContactNumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                       @*  <h5 class="mt-4 mb-3">Fleet Information</h5>
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.TruckCount)
                            @Html.TextBoxFor(m => m.TruckCount, new { @class = "form-control", type = "number", min = "1" })
                            @Html.ValidationMessageFor(m => m.TruckCount, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-3">
                            @Html.Label("TruckTypes", "Truck Types")
                            <select multiple class="form-control" name="TruckTypes">
                                <option value="Open Trailer">Open Trailer</option>
                                <option value="Container">Container</option>
                                <option value="Flatbed">Flatbed</option>
                                <option value="Refrigerated">Refrigerated</option>
                            </select>
                            <small class="form-text text-muted">Hold Ctrl (Windows) or Cmd (Mac) to select multiple</small>
                        </div>
 *@
                        <h5 class="mt-4 mb-3">Location & Availability</h5>
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.BaseLocation)
                            @Html.TextBoxFor(m => m.BaseLocation, new { @class = "form-control" })
                        </div>
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.ServiceRegions)
                            @Html.TextBoxFor(m => m.ServiceRegions, new { @class = "form-control", placeholder = "e.g., Maharashtra, Gujarat, Delhi" })
                        </div>

                        <h5 class="mt-4 mb-3">Truck Image</h5>
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.TruckImage)
                            <input type="file" name="TruckImage" class="form-control" accept="image/*" />
                            @Html.ValidationMessageFor(m => m.TruckImage, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="TermsAccepted" required />
                            <label class="form-check-label" for="TermsAccepted">I agree to the terms and conditions</label>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Submit & Join</button>
                    </form>
                </div>
                <div class="card-footer text-muted text-center">
                    Already registered? <a href="/Supplier/Login">Log in here</a>
                </div>
            </div>
        </div>
    </div>
</div>