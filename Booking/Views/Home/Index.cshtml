@model ShipmentViewModel
@{
    ViewData["Title"] = "Create Shipment";
    var products = ViewBag.Products as List<(string Code, string Name)>;
}

<h2 class="mb-4 fw-bold text-primary">🚚 Create Shipment</h2>
@Html.Partial("Stepper")

<div class="card p-4 mb-5">
    <form asp-action="Create" asp-controller="Home" method="post" enctype="multipart/form-data" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Invoice Upload -->
        <div class="mb-4 p-4">
            <h5 class="fw-semibold mb-2">📄 Upload Invoice</h5>
            <p class="text-muted small">Drag & drop an image/PDF or click to upload (max 10 MB).</p>
            <input asp-for="InvoiceFile" type="file" class="form-control" />
            <span asp-validation-for="InvoiceFile" class="text-danger"></span>
        </div>

        <!-- Serviceability -->
        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <label asp-for="SourcePincode" class="form-label">Source Pincode</label>
                <input asp-for="SourcePincode" class="form-control" placeholder="e.g. 421302" />
                <span asp-validation-for="SourcePincode" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="DestinationPincode" class="form-label">Destination Pincode</label>
                <input asp-for="DestinationPincode" class="form-control" placeholder="e.g. 421302" />
                <span asp-validation-for="DestinationPincode" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="SourceAddress" class="form-label">Source Address</label>
                <textarea asp-for="SourceAddress" class="form-control" rows="2" placeholder="Enter full address"></textarea>
                <span asp-validation-for="SourceAddress" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="DestinationAddress" class="form-label">Destination Address</label>
                <textarea asp-for="DestinationAddress" class="form-control" rows="2" placeholder="Enter full address"></textarea>
                <span asp-validation-for="DestinationAddress" class="text-danger"></span>
            </div>
        </div>

        <hr class="my-4" />

        <!-- Invoice Details -->
        <div class="mb-4">
            <h5 class="fw-semibold mb-3">🧾 Invoice Details</h5>
            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="InvoiceNumber" class="form-label">Invoice Number</label>
                    <input asp-for="InvoiceNumber" class="form-control" />
                    <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="InvoiceValue" class="form-label">Invoice Value</label>
                    <input asp-for="InvoiceValue" class="form-control" />
                    <span asp-validation-for="InvoiceValue" class="text-danger"></span>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="InvoiceValue" class="form-label">Booking Date</label>
                    <input asp-for="BookingDate"
                           type="date"
                           class="form-control"
                           min="@DateTime.Now.ToString("yyyy-MM-dd")"
                           value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="BookingDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <hr class="my-4" />

        <!-- Shipment Details -->
        <div class="mb-4">
            <h5 class="fw-semibold mb-3">📦 Shipment Details</h5>
            <div class="row g-4">
                <div class="col-md-4">
                    <label asp-for="ProductCode" class="form-label">Select Product</label>
                    <select asp-for="ProductCode" class="form-select">
                        <option value="">-- Select --</option>
                        @foreach (var p in products)
                        {
                            <option value="@p.Code">@p.Name</option>
                        }
                    </select>
                    <span asp-validation-for="ProductCode" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="NumberOfBoxes" class="form-label">Boxes</label>
                    <input asp-for="NumberOfBoxes" class="form-control" />
                    <span asp-validation-for="NumberOfBoxes" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="Length" class="form-label">Length (cm)</label>
                    <input asp-for="Length" class="form-control" />
                    <span asp-validation-for="Length" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="Breadth" class="form-label">Breadth (cm)</label>
                    <input asp-for="Breadth" class="form-control" />
                    <span asp-validation-for="Breadth" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="Height" class="form-label">Height (cm)</label>
                    <input asp-for="Height" class="form-control" />
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
                <div class="col-md-3 mt-md-3">
                    <label asp-for="TotalWeight" class="form-label">Total Weight (kg)</label>
                    <input asp-for="TotalWeight" onchange="onTotalweight(3)" class="form-control" />
                    <span asp-validation-for="TotalWeight" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Supplier Selection -->
        <div class="mt-5">
            <h5 class="fw-semibold mb-3">🤝 Choose a Trusted Partner</h5>
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light sticky-top">
                        <tr>
                            <th>Select</th>
                            <th>Name</th>
                            <th>Contact</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.Suppliers != null)
                        {
                            @foreach (var supplier in ViewBag.Suppliers)
                            {
                                <tr>
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox"
                                                   name="SelectedSupplierIds"
                                                   value="@supplier.Id"
                                                   id="supplier_@supplier.Id" />
                                            <label class="form-check-label" for="supplier_@supplier.Id">Select</label>
                                        </div>
                                    </td>
                                    <td>@supplier.CompanyName</td>
                                    <td>@supplier.ContactNumber</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Submit -->
        <div class="mt-4 text-end">
            <button type="submit" class="btn btn-lg btn-success px-5">💳 Make Payment</button>
        </div>
    </form>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
 
<script>
    function onTotalweight(step) {
        fetch('/Home/UpdateStep', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ step: step })
        });
    }
</script>