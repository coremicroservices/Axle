@using Booking.DTO
@model List<ShipmentDto>

@{
    ViewData["Title"] = "MyBookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 

<div class="text-center my-4">
    <h2 class="fw-bold text-primary">📦 My Bookings</h2>
    <p class="text-muted">Track your truck bookings, view shipment status, and manage upcoming deliveries.</p>
</div>

<div class="container mt-4">
    
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Booking ID</th>
                        <th>File ID</th>
                        <th>Source</th>
                        <th>Destination</th>
                        <th>Invoice #</th>
                        <th>Invoice Value</th>
                        <th>Created On</th>
                        <th>Booking Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var shipment in Model)
                    {
                        <tr>
                            <td>@shipment.BookingId</td>
                            <td>@shipment.FileId</td>
                            <td>
                                <strong>Pincode:</strong> @shipment.SourcePincode<br />
                                <strong>Address:</strong> @shipment.SourceAddress
                            </td>
                            <td>
                                <strong>Pincode:</strong> @shipment.DestinationPincode<br />
                                <strong>Address:</strong> @shipment.DestinationAddress
                            </td>
                            <td>@shipment.InvoiceNumber</td>
                            <td>₹@shipment.InvoiceValue?.ToString("N2")</td>
                            <td>@shipment.CreatedOn.ToString("dd MMM yyyy HH:mm")</td>
                            <td>@shipment.BookingDate.ToString("dd MMM yyyy")</td>
                            <td>
                                @if (shipment.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No shipments found.</div>
    }
</div>

<div class="text-center mt-4">
    <a href="/Home/Index" class="btn btn-lg btn-success">➕ Book Another Truck</a>
</div>


