@model AuthViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<div class="container mt-5">
    <div class="row justify-content-center">
       
        <div class="col-md-6 col-sm-10">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (TempData["register"] != null)
                    {
                        <span class="alert-success">@TempData["register"]</span>
                    }
                    <ul class="nav nav-tabs mb-3" id="authTabs" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#loginTab">Login</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#registerTab">Register</button>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <!-- Login Tab -->
                        <div class="tab-pane fade show active" id="loginTab">
                            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                            {
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.Login.UserName)
                                    @Html.TextBoxFor(m => m.Login.UserName, new { @class = "form-control", @type = "text", placeholder = "Enter your mobile number / email id" })
                                </div>
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.Login.Password)
                                    @Html.PasswordFor(m => m.Login.Password, new { @class = "form-control", placeholder = "Password" })
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Login</button>
                            }
                        </div>

                        <!-- Register Tab -->
                        <div class="tab-pane fade" id="registerTab">
                            @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
                            {
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.Register.Name)
                                    @Html.TextBoxFor(m => m.Register.Name, new { @class = "form-control", placeholder = "Full Name" })
                                </div>
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.Register.Email)
                                    @Html.TextBoxFor(m => m.Register.Email, new { @class = "form-control", @type = "email", placeholder = "Email" })
                                </div>
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.Register.Password)
                                    @Html.PasswordFor(m => m.Register.Password, new { @class = "form-control", placeholder = "Password" })
                                </div>
                                <button type="submit" class="btn btn-success w-100">Register</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
