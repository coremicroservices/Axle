@using Booking.Helper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TruckBook Customer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.14/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>


    <script type="text/javascript">
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub") // match your hub route
            .build();

        // Subscribe to the server-published method
        connection.on("SendNotificationToPartner", function (user, message) {
           console.log("Received:", message);

            // Handle the incoming message
            const notificationArea = document.getElementById("notificationArea");
            notificationArea.innerText = `${user}: ${message}`;
            notificationArea.style.display = "block";

        });

        connection.start().catch(function (err) {
            console.error("SignalR connection error:", err.toString());
        });
    </script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
        <a class="navbar-brand fw-bold" href="/">TruckBook</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#customerNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="customerNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">               
                <li class="nav-item"><a class="nav-link" href="/Home/Index">Book Truck</a></li>
                <li class="nav-item"><a class="nav-link" href="/Customer/MyBookings">My Bookings</a></li>
                <li class="nav-item"><a class="nav-link" href="/Customer/Track">Track Shipment</a></li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Supplier" asp-action="Index">Supplier Portal</a>
                </li>

            </ul>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        My Account
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Customer/Profile">Profile</a></li>
                        <li><a class="dropdown-item" href="/Customer/Logout">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
