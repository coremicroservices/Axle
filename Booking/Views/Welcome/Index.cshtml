@{
 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Welcome";

}
<div class="text-center my-5">
    <h1 class="fw-bold text-primary">Welcome to TruckBook</h1>
    <p class="lead text-muted">Your trusted partner for reliable truck bookings and real-time shipment tracking across India.</p>
    <a href="/Home/Index" class="btn btn-primary btn-lg mt-3">🚚 Book a Truck</a>
</div>

<div class="row g-4 mt-5">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <h5 class="card-title">📦 Easy Booking</h5>
                <p class="card-text">Book trucks in minutes with our streamlined interface. Choose vehicle type, pickup, and drop-off with ease.</p>
                <a href="/Home/Index" class="btn btn-outline-primary btn-sm">Start Booking</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <h5 class="card-title">📍 Real-Time Tracking</h5>
                <p class="card-text">Track your shipments live with GPS updates and delivery status. Stay informed every step of the way.</p>
                <a href="/Customer/Track" class="btn btn-outline-success btn-sm">Track Shipment</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <h5 class="card-title">💬 Support & Safety</h5>
                <p class="card-text">Our support team is here 24/7. All drivers are verified and insured for your peace of mind.</p>
                <a href="/Customer/Support" class="btn btn-outline-secondary btn-sm">Contact Support</a>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-5">
    <p class="text-muted">Trusted by 10,000+ customers across Maharashtra. Experience logistics made simple.</p>
</div>
